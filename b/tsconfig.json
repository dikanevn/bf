{
  "compilerOptions": {
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}